<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/main_hours_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_label_hours"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toStartOf="@id/notificationtimer_start_space"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_hours_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_value_hours"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintEnd_toEndOf="@id/main_hours_label_textview"
        app:layout_constraintEnd_toStartOf="@id/notificationtimer_start_space"
        app:layout_constraintTop_toBottomOf="@id/main_hours_label_textview" />

    <Space
        android:id="@+id/notificationtimer_start_space"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toStartOf="@id/main_colon_label_textview" />

    <TextView
        android:id="@+id/main_colon_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:text="@string/main_label_colon"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="@id/main_hours_value_textview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/main_hours_value_textview" />

    <Space
        android:id="@+id/notificationtimer_end_space"
        android:layout_width="15dp"
        android:layout_height="match_parent"
        app:layout_constraintStart_toEndOf="@id/main_colon_label_textview" />

    <TextView
        android:id="@+id/main_minutes_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_label_minutes"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="@id/main_hours_label_textview"
        app:layout_constraintStart_toEndOf="@id/notificationtimer_end_space"
        app:layout_constraintTop_toTopOf="@id/main_hours_label_textview" />

    <TextView
        android:id="@+id/main_minutes_value_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_value_minutes"
        android:textColor="#FFFFFF"
        android:textSize="52sp"
        app:layout_constraintBottom_toBottomOf="@id/main_hours_value_textview"
        app:layout_constraintStart_toEndOf="@id/notificationtimer_end_space"
        app:layout_constraintTop_toTopOf="@id/main_hours_value_textview" />

    <TextView
        android:id="@+id/main_suffixtimer_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="@string/main_text_beforedeadline"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_hours_value_textview" />

</androidx.constraintlayout.widget.ConstraintLayout>
