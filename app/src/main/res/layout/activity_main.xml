<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/linearLayout"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#3F2A49"
    android:padding="16dp">

    <TextView
        android:id="@+id/main_title_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:text="Fantasy Premier League Reminder"
        android:textColor="#FFFFFF"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        >

        <TextView
            android:id="@+id/main_upcomingDeadline_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:text="Gameweek 33 deadline: Fri 10 Apr 20:00"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:textSize="10sp"
            />


</LinearLayout>

    <TextView
        android:id="@+id/main_timer_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:text="Notification timer"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="20dp"
        android:background="@drawable/rounded_corners">

        <include
            android:id="@+id/main_progress_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_progress"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" />

        <include
            android:id="@+id/main_notification_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            layout="@layout/layout_notificationtimer" />
    </LinearLayout>

    <TextView
        android:id="@+id/main_preferences_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:text="Notification preferences"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <CheckBox
                android:theme="@style/checkBoxStyle"
                android:id="@+id/main_sound_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="Sound"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:onClick="changeSoundSettings" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <CheckBox
                android:theme="@style/checkBoxStyle"
                android:id="@+id/main_vibration_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:text="Vibration"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:onClick="changeVibrationSettings" />
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/main_refresh_button"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/ic_refresh"
        android:background="@drawable/refresh_button_selector"
        android:layout_gravity="center"
        android:layout_marginTop="35dp"
        tools:ignore="ContentDescription" />
</LinearLayout>