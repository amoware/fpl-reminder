<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#3F2A49">

    <TextView
        android:id="@+id/main_title_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="55dp"
        android:text="Fantasy Premier League Reminder"
        android:textColor="#FFFFFF"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/main_timer_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="20dp"
        android:text="Notification timer"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5px"
        android:background="@drawable/rounded_corners">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:onClick="showReminderDialog">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_hours_label_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hours"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:paddingRight="20dp"
                    android:paddingTop="20dp" />

                <TextView
                    android:id="@+id/main_hours_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:paddingRight="20dp"
                    android:paddingBottom="20dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/main_colon_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=":"
                android:textSize="30sp"
                android:orientation="vertical"
                android:paddingTop="45dp"
                android:textColor="#FFFFFF" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main_minutes_label_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minutes"
                    android:textSize="20sp"
                    android:textAllCaps="true"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingTop="20dp" />

                <TextView
                    android:id="@+id/main_minutes_value_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="30sp"
                    android:textColor="#FFFFFF"
                    android:paddingLeft="20dp"
                    android:paddingBottom="20dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/main_suffixtimer_label_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/main_text_beforedeadline"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:paddingBottom="10dp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/main_preferences_label_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="45dp"
        android:layout_marginLeft="20dp"
        android:text="Notification preferences"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="12sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="5px"
        android:background="@drawable/rounded_corners"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingLeft="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <CheckBox
                android:id="@+id/main_sound_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:layoutDirection="rtl"
                android:text="Sound"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:onClick="changeSoundSettings" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:gravity="center"
            android:paddingRight="50dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp">

            <CheckBox
                android:id="@+id/main_vibration_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:buttonTint="#FFFFFF"
                android:layoutDirection="rtl"
                android:text="Vibration"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:onClick="changeVibrationSettings" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>